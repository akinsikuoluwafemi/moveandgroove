
    <div class="container">
      <div class="row">
          <div class="col-sm-12 col-lg-3"></div>
          <div class="col-sm-12 col-lg-6">

              <%= render "devise/shared/error_messages", resource: resource %>

              <%#  %>
                <div class="shadow border px-4 py-4 mb-4">
                  <h2 class="text-center text-head text-success">Sign up</h2>

                  
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    
                      
                      <div class="field form-group">
                        <%= f.label :email, for: "exampleInputEmail1" %> <br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleInputEmail1" %>
                      </div>

                      <div class="field form-group">
                        <%= f.label :password, for: "exampleInputPassword1" %>
                        <% if @minimum_password_length %>
                        <small id="passwordHelp" class="form-text text-muted">  <em>(<%= @minimum_password_length %> characters minimum)</em> </small>
                        <% end %>
                        <%= f.password_field :password, autocomplete: "new-password",id: "exampleInputPassword1", class: "form-control", type: "password", aria_describedby: "passwordHelp"  %>
                      </div>

                      <div class="field form-group">
                        <%= f.label :password_confirmation, for: "Passwordconfirmation" %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                      </div>

                      <div class="actions">
                        <%= f.submit "Sign up", class: "btn btn-outline-success" %>
                      </div>
                    <% end %>

                    <%= render "devise/shared/links" %>

                </div>

              <%#  %>
          
          </div>
          <div class="col-sm-12 col-lg-3"></div>

      </div>
    
    </div>
   
   
   
   
   
