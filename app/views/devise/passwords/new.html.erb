<div class="container">
  <div class="row py-4">
    <div class="col-sm-12 col-lg-3"></div>
    <div class="col-sm-12 col-lg-6">

      <div class="shadow border px-4 py-4 mb-4">

        <h2 class="text-center text-head text-info">Forgot your password?</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field form-group">
              <%= f.label :email, for:"exampleInputEmail1"  %> <br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "exampleInputEmail1", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "Send me reset password instructions", class: "btn btn-outline-success" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

      
      </div>
    
    </div>
    <div class="col-sm-12 col-lg-3"></div>
  </div>

</div>


