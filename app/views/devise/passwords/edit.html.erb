<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-3"></div>
    <div class="col-sm-12 col-lg-6">

        <div class="shadow border px-4 py-4 mb-4">


            <h2 class="text-center text-head text-info">Change your password</h2>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="field form-group">
                <%= f.label :password, "New password",for: "Password1" %><br />
                <% if @minimum_password_length %>
                  <small id="passwordHelp" class="form-text text-muted" ><em>(<%= @minimum_password_length %> characters minimum)</em> </small>
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", id: "Password1", class: "form-control", type: "email" %>
              </div>

              <div class="field form-group">
                <%= f.label :password_confirmation, "Confirm new password", for: "confirmPassword1" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "confirmPassword1", class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "Change my password", class: "btn btn-outline-success"%>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>


        </div>
    
    </div>
    <div class="col-sm-12 col-lg-3"></div>
  </div>
</div>





