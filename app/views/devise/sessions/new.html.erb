<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-3"></div>
    <div class="col-sm-12 col-lg-6">

        <%#  %>
        <div class="shadow border px-4 py-4 mb-4">

            <h2 class="text-center text-head text-success">Log in</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field form-group">
                <%= f.label :email , for: "exampleInputEmail1" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "exampleInputEmail1", class: "form-control", type: "email", placeholder: "Enter your Email" %>
              </div>

              <div class="field form-group">
                <%= f.label :password, for: "exampleInputPassword1" %>
                <%= f.password_field :password, autocomplete: "current-password", id: "exampleInputPassword1", class: "form-control", type: "password", placeholder: "Enter your Password" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field form-group form-check">
                  <%= f.check_box :remember_me, type: "checkbox", class: "form-check-input", id: "exampleCheck1"  %>
                  <%= f.label :remember_me, for: "exampleCheck1", class: "form-check-label"  %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-outline-success"%>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>


        </div>

        <%#  %>
    <div class="col-sm-12 col-lg-3"></div>
  </div>
  
  </div>

</div>


