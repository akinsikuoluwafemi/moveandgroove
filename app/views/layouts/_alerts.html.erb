<% if notice %>
    <div style=" margin:auto;" class="alert alert-success alert-dismissible fade show" role="alert">
    <%=notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <% elsif alert %>
    <div style=" margin:auto;" class="alert alert-danger alert-dismissible fade show" role="alert">
    <%=alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

<%end%>


