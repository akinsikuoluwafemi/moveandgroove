 <div class="rowe pb-4">
        <%# 1 %>
      
      <% @activities.each do |activity| %>

          <% if user_signed_in? && activity.user == current_user %> 

            <div class="">
                  <%#  %>
              <div class="out-card border-info shadow">
                <div class="main-card">
                <div class="inner-card">
                  <div class="user-info">
                    <div class="round">
                      <%# <img src="" alt="user" > %>
                    </div>
                    <div class="user-name">
                      <span class="name"><%= activity.user.username.capitalize if activity.user %></span>
                      <span class="email"><%= activity.user.email if activity.user %></span>
                    </div>
                      
                  </div>
              
                  <div class="activity-stats">
                    <p class="activity-name font-italic"><%= link_to activity.name, activity_path(activity), class: "text-success"  %></p>
                    <p class="activity-date">On: <%= activity.date.strftime("%B/%d/%Y") %></p>
                    <%# <p class="activity-time">For About: 2hrs 30 min</p> %>
                    
                    <p class="activity-time">For About: <%= TimeDifference.between(activity.start_time, activity.end_time).in_hours  %> hours</p>

                  </div>
                
                </div>
                <div class="text-center">     
                  <%= link_to  "View", activity_path(activity), class:"btn-sm btn-success" %>
                  <%= link_to "Edit", edit_activity_path(activity), class:"btn-sm btn-info" %>
                  <%= link_to "Delete", activity_path(activity), class:"btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>

                </div>
              </div>
        
              <div class="time-in shadow">
                <small><span class="badge badge-info">Created</span>:<%= time_ago_in_words(activity.created_at) %>ago.<span class="badge badge-info">Edited</span>:<%= time_ago_in_words(activity.updated_at)%>ago</small>  
              </div>
              </div>
            </div>

          <%end%>
      <%end%> 


      


 </div>
