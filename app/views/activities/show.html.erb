<div class="container">
    <div class="row">
        <div class="col">
            <div>
                <p id="notice"><%= notice %></p>

                <h1>Showing activity details</h1>

                <p> Activity name: <%= @activity.name%></p>
                <p>Activity Date: <%= @activity.date%> </p>
                <p>Start Time: <%=@activity.start_time %></p>
                <p>End Time: <%=@activity.end_time %></p>
                <p> by <%= @activity.user.email.split('@')[0].capitalize if @activity.user %> </p>

                <%= link_to 'Edit', edit_activity_path(@activity) %> |
                <%= link_to 'Delete', activity_path(@activity), method: :delete, data: { confirm: 'Are you sure?' } %> |

                <%= link_to 'Back', activities_path %>

            </div>

        </div>
    
    </div>

</div>

