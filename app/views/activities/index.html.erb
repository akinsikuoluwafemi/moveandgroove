<p id="notice"><%= notice %></p>

<h1>Activities Listing page</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>

      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.date %></td>
        <td><%= activity.start_time %></td>
        <td><%= activity.end_time %></td>
        <td> <%= link_to "Show", activity_path(activity) %> </td>
        <td> <%= link_to "Edit", edit_activity_path(activity) %> </td>
        <td> <%= link_to "Delete", activity_path(activity), method: :delete, data: { confirm: 'Are you sure?'} %> </td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path %>
