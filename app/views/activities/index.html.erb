<p id="notice"><%= notice %></p>

<h1>Activities Listing page</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>

      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <% if current_user.id == activity.user_id %>
         <tr>

          <td><%= activity.name %></td>
          <td><%= activity.date.strftime("%Y/%m/%d") %></td>

          <td><%= Time.now.strftime(activity.start_time.to_s)[11..15] %></td>
          <td><%= Time.now.strftime(activity.end_time.to_s)[11..15] %></td>
          <td> <%= link_to "Show", activity_path(activity) %> </td>
          <td> <%= link_to "Edit", edit_activity_path(activity) %> </td>
          <td> <%= link_to "Delete", activity_path(activity), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
          <td> by <%= activity.user.email.split('@')[0].capitalize if activity.user %> </td>

      </tr>
      
     
      <% end %>
     
    <% end %>
  </tbody>
</table>

<br>

<p>
<%= link_to 'New Activity', new_activity_path %>
</p>